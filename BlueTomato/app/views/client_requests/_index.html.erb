
<h1>Listing Client Requests</h1>
<%= link_to 'New client request', new_client_request_path %>

<% @client_requests.each do |client_request| %>
    <div class = "well">
      <p><%= ServiceType.find(client_request.service_type_id).name %></p>
      <p><%= client_request.period %></p>
      <%= link_to 'Read More', client_request_path(client_request), class:"btn btn-default" %>
    </div>
<% end %>
