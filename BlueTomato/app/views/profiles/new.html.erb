<%= form_with scope: :profile, url:profiles_path ,local: true do |form| %>
    <p>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </p>
    <p>
      <%= form.label :phone %><br>
      <%= form.text_field :phone %>
    </p>
    <p>
      <%= form.label :address %><br>
      <%= form.text_field :address %>
    </p>

    <p>
      <%= form.submit %>
    </p>
<% end %>