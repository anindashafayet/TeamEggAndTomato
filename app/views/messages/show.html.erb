<div class = "well">
<p>
  <strong>Sender Name:</strong>
  <%= @message.name %>
</p>

<p>
  <strong>Sender Email Address:</strong>
  <%= @message.email %>
</p>

<p>
  <strong>Message Title:</strong>
  <%= @message.title %>
</p>

<p>
  <strong>Message Content:</strong>
  <%= @message.text %>
</p>
<% if logged_in_user_or_guest.id == @message.user_id || logged_in_user_or_guest.username == "admin"%>
  <%= link_to 'Edit', edit_message_path(@message) %> |
  <%= link_to 'Delete', message_path(@message, prevPage:url_for(:back)),
              #option: {:prevPage => url_for(:back)},
              method: :delete,
              data: {confirm: 'Are you sure to delete?'}%>

              |
<%end%>
<%= link_to 'Back', :back %>
</div>
